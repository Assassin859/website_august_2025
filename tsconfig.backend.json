{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/server.ts",
    "src/config/**/*.ts",
    "src/controllers/**/*.ts",
    "src/middleware/**/*.ts",
    "src/realtime/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts",
    "src/validation/**/*.ts",
    "src/app.ts"
  ],
  "exclude": [
    "src/app/**/*",
    ".next",
    "node_modules",
    "dist"
  ]
}

